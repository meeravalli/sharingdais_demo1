<h3 class="heading_content">Sharingdais User Orders</h3>
<br>
<div class="display padding_five">
         <!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist" style="float:left">
  <li class="active"><a href="#food" role="tab" data-toggle="tab">Food Oders</a></li>
  <li><a href="#book" role="tab" data-toggle="tab">Book Orders</a></li>
  <li><a href="#skill" role="tab" data-toggle="tab">Skill Orders</a></li>
  <li><a href="#peer" role="tab" data-toggle="tab">Peer-to-Peer Service Orders</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="food">
    <div class="display padding_five">
            <table class="table table-hover">
                <thead class="heading">
                    <tr>
                        <th style="width:20%">Date / Time</th>
                        <th style="width:20%">Name of the connected person</th>
                        <th style="width:20%">Name of the person</th>
                        <th style="width:20%">Phone No.</th> 
                        <th style="width:20%">Details</th>                       
                    </tr>
                 </thead>
                 <tbody>
                    <% @order_food.each do |o| %>
					           <tr>
                      <td>
                        <%= o.created_at.strftime("%d %b. %Y") %> : 
                        <%= o.created_at.strftime("%H:%M") %>
                      </td>
                      <td><%= o.post_requirement.user.name %></td>
                      <td><%= o.user.name %>           </td>
                       <td><%= o.user.phone_no%></td>
                      <td><%= o.post_requirement.details %></td>
                     </tr>
					          <% end %>            
                </tbody>
            </table>
            <div class="pagination">
  				<%= will_paginate @order_food %>
        	</div>
        </div>
  </div>



