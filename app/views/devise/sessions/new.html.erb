<style type="text/css">
.btns {
margin-bottom: 5px;
}
.btns {
display: inline-block;
padding: 6px 12px;
margin-bottom: 0;
font-size: 14px;
font-weight: normal;
line-height: 1.428571429;
text-align: center;
white-space: nowrap;
vertical-align: middle;
cursor: pointer;
border: 1px solid transparent;
border-radius: 4px;
-webkit-user-select: none;
-moz-user-select: none;
-ms-user-select: none;
-o-user-select: none;
user-select: none;
}
.btn-facebook {
color: #ffffff;
background-color: #133783;
border-color: #133783;
width: 100%;
}
.btn-facebook:hover, .btn-facebook:focus, .btn-facebook:active, .btn-facebook.active, .open .dropdown-toggle.btn-facebook {
color: #ffffff;
background-color: #0e285f;
border-color: #0b214e;
}
.btn-google-plus {
color: #ffffff;
background-color: #dd4b39;
border-color: #c53727;
width: 100%;
}
.btn-google-plus:hover, .btn-google-plus:focus, .btn-google-plus:active, .btn-google-plus.active, .open .dropdown-toggle.btn-google-plus {
color: #ffffff;
background-color: #ca3523;
border-color: #92291d;
}
.alert {
	top: 0px;
}
</style>
<div class="login_page">
<!--<div class="login_img"><%#= image_tag 'newlogo.jpg',  :alt=>""%></div>-->
					<div class="content">
						<div class="resize">
	            	        <!--Login Content-->
							<div class="login_content">
                        	<h2 class="login_heading">Log in</h2>
								<div style="z-index: 16;" class="signup_link">Don't have an account? <%#= link_to "Sign up", new_user_registration_path %>
									<a href="/users/sign_up">Sign up</a>
								
								<a href="/auth/facebook" class="btns btn-facebook">
	<i style="color:#fff" class="fa fa-facebook"></i> 
	| Connect with Facebook
</a>
<a href="/auth/google_oauth2" class="btns btn-google-plus">
	<i style="color:#fff" class="fa fa-google-plus"></i> 
	| Connect with Google Plus
</a> </div>
                            <div class="login_form">


                            	
														<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <div class="text_lable">Email<i>*</i></div>
                                <div class="text_feild"><%= f.email_field :email, :autofocus=> true, :placeholder => 'Enter your Email id', :class => "form-control login_feild"  %></div>
                                <div class="text_lable">Password<i>*</i></div>
                                <div class="text_feild"><%= f.password_field :password, :autocomplete => "off", :placeholder => 'Enter your Password', :class => "form-control login_feild" %></div>
																<% if devise_mapping.rememberable? -%>
                               <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
															 <% end -%>
                                <div class="text_feild"><%= f.submit "Login", :class=>"login_button" %></div>
                                <%end%>
                            </div>
												<div class="sign_links">
												<%= render "devise/shared/links" %>
												</div>
						</div>
						</div>
					</div>
				</div>
				
