<%= render 'banner_carousel' %>
<%= render 'home/micro_content' %>
  <% if @search_params.nil? %>
    <%= render 'content' %>
  <% elsif @search_params == 0%>
    <p class="no_result_style"> No Results are found. Request you to post your requirement, we will try to fulfill it.</p>
    <p class="no_result_post">
      <%= link_to 'Post your requirement if you are looking for food', post_requirement_sharing_index_path, :title => "Looking for home cooked food? Submit your request here" %>
      <%= link_to 'Post your offering if you are willing to provide food', list_availability_sharing_index_path, :title => "Interested in serving food to people? Submit your request here" %>
    </p><br>
  <% else %>
    <%= render 'list'%>
  <% end %>