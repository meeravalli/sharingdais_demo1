<div class="display">
  <h3 class="prf_title">Your Book Sharing Details</h3>
  <div class="table-responsive src_res_desktop">
    <table class="table table-hover">
      <thead class="heading">
        <tr>
          <th>#</th>
          <!--<th>Book Photo</th>-->
          <th>City</th>
          <th>Locality </th>
          <th>Post As</th>
          <th>Book Name</th>
          <th>Price</th>
          <th>Description</th>
          <!--<th>Date Of Posting</th>-->
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% my_count = 1 %>
        <% if @book_post_requirements.present? %>
        <% @book_post_requirements.each do |p| %>
          <tr>
            <td><%= my_count %></td>
            <!--<%# if !p.image.path.nil? %>
              <td><%#= image_tag p.image.url(:small) %></td>
            <%#else%>
              <td>No image</td>
            <%#end%>-->
            <td><%= p.city.city_name %></td>
            <td><%= p.location.location_name%></td>
            <td>
              <% if p.seeker_provider == true %>
                Seeker 
              <% else %>                 
                Provider            
              <% end %>
            </td>
            <td><%= p.name %></td>
            <td><%= p.rent %></td>
            <td><%= p.description %></td>
            <!--<td><%#= p.date_of_posting.strftime('%d %B %Y') if p.date_of_posting.present? %></td>-->
            <% if p.seeker_provider %>
              <td><%= link_to 'Edit', edit_book_post_requirement_sharing_path(p)%></td>
            <%else%>
              <td><%= link_to 'Edit', edit_book_list_availability_sharing_path(p)%></td>
            <%end%>
            <td><%= link_to 'Destroy', book_destroy_requirement_sharing_path(p), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% my_count +=1 %>
        <% end %>
        <% else%>
                <tr> 
                    <td colspan="9" style="text-align:center">You don't have any book requirements </td>
                </tr>
                <%end%>
      </tbody>  
    </table>
  </div>

  <div class="srch_res_mob">
  <% if !@book_post_requirements.empty? %>
    <% @book_post_requirements.each do |p| %>
      <div class="res_data">
        <!--<div class="data_row">
          <div class="data_title">
            Book Image
          </div>
          <div class="data_col">
            <%# if !p.image.path.nil? %>
              <%#= image_tag p.image.url(:small) %>
            <%#else%>
             No image
            <%#end%>
          </div>
        </div>-->
        <div class="data_row">
          <div class="data_title">
            City
          </div>
          <div class="data_col">
            <%= p.city.city_name %>
          </div>
        </div>
              <div class="data_row">
                <div class="data_title">
                    Locality
                  </div>
                  <div class="data_col">
                    <%= p.location.location_name%>
                  </div>
              </div>
              <div class="data_row">
                <div class="data_title">
                    Post As
                  </div>
                  <div class="data_col">
                    <% if p.seeker_provider == true %>
                Seeker 
              <% else %>                 
                Provider            
              <% end %>
                  </div>
              </div>
              <div class="data_row">
                <div class="data_title">
                    Book Name
                  </div>
                  <div class="data_col">
                    <%= p.name %>
                  </div>
              </div>
              <div class="data_row">
                <div class="data_title">
                    Price
                  </div>
                  <div class="data_col">
                    <%= p.rent %>
                  </div>
              </div>
              <div class="data_row">
                <div class="data_title">
                    Description
                  </div>
                  <div class="data_col">
                    <%= p.description %>
                  </div>
              </div>
              <div class="data_row">
                <div class="data_title">
                </div>
                  <div class="data_col">
                  <% if p.seeker_provider %>
                    <%= link_to 'Edit', edit_book_post_requirement_sharing_path(p)%>
                  <%else%>
                  <%= link_to 'Edit', edit_book_list_availability_sharing_path(p)%>
                  <%end%>
                  </div>
              </div>
              <div class="data_row">
                <div class="data_title">
                </div>
                  <div class="data_col">
                    <%= link_to 'Destroy', book_destroy_requirement_sharing_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
              </div>
          </div>
  <%end%>
  <%else%>
             <div class="res_data">
             <div class="data_row">
                                        <div class="data_title">
                                            Status
                                        </div>
                                        <div class="data_col">
                                            You don't have any book requirement
                                        </div>
             </div>
          </div>
             <%end%>
</div>
</div>











