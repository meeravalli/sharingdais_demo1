<div class="display">
  <h3 class="prf_title">Your Skill Sharing Details</h3>
  <div class="table-responsive src_res_desktop">
    <table class="table table-hover">
      <thead class="heading">
        <tr>
          <th>#</th>
          <th>City</th>
          <th>Locality</th>
          <th>Post As</th>
          <!--<th> Service </th>
          <th> I am looking for/I am </th>
          <th>Food Type</th>-->
          <th>Skill</th>
          <th>Price </th>
          <!--<th>Region Specific </th>-->
          <th>Description</th>
          
          <th></th>
          <th></th>
        </tr>
      </thead>
    <tbody>
    <% my_count = 1 %>
    <% if !@skill_post_requirements.empty? %>
      <% @skill_post_requirements.each_with_index do |p, i| %>

        <tr>
          <td><%= (@page.to_i - 1) * 10 + i+1 %></td>
          <td><%= p.city.city_name %></td>
          <td><%= p.location.location_name%></td>
          <td>
            <% if p.seeker_provider == true %>
              Seeker
            <% else %>
              Provider              
            <% end %>
          </td>
          <!--<td><%#= p.service.service_type%></td>
          <td><%#= p.provider.provider_type%></td>
          <td><%#= p.food_type.name%></td>-->
          <td><%= p.sub_category.sub_category_type%></td>
          <td><%= p.charges%></td>
          <td><%= p.description%></td>
          

          <% if p.seeker_provider %>
            <td>
              <%= link_to 'Edit', edit_skill_post_requirement_sharing_path(p)%>
            </td>
          <%else%>
            <td>
              <%= link_to 'Edit', edit_skill_list_availability_sharing_path(p)%>              
            </td>
          <%end%>
          <td>
            <%= link_to 'Destroy', skill_destroy_requirement_sharing_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% my_count +=1 %>
      <% end %>
    <% else%>
      <tr> 
        <td colspan="8" style="text-align:center">You don't have any skill requirements</td>
        <td></td>
      </tr>
    <%end%>
    
    </tbody>  
  </table>
  <div>
    <tr><td><%=will_paginate @skill_post_requirements%></td> </tr>
  </div>
  <!--<div id="">
            <%#= will_paginate @skill_post_requirements, renderer: BootstrapPagination::Rails, params: {search: params[:search]} %>
        </div>-->
</div>
<!--####################### Mobile ##############################-->

<div class="srch_res_mob">

<% my_count = 1 %>
    <% if !@skill_post_requirements.empty? %>
<% @skill_post_requirements.each do |p| %>
          <div class="res_data">
            <div class="data_row">
              <div class="data_title">City</div>
              <div class="data_col">
                  <%= p.city.city_name %>
              </div>
            </div>
          <div class="data_row">
            <div class="data_title">Locality</div>
            <div class="data_col">
              <%= p.location.location_name%>
            </div>
          </div>
          <div class="data_row">
            <div class="data_title">Post As</div>
            <div class="data_col">
              <% if p.seeker_provider == true %>
              Seeker
            <% else %>
              Provider              
            <% end %>
            </div>
          </div>
          <div class="data_row">
            <div class="data_title">Skill</div>
            <div class="data_col">
              <%= p.sub_category.sub_category_type%>
            </div>
          </div>
          <div class="data_row">
            <div class="data_title">Price</div>
            <div class="data_col">
              <%= p.charges%>
            </div>
          </div>
          <div class="data_row">
            <div class="data_title">Description</div>
            <div class="data_col">
              <%= p.description%>
            </div>
          </div>
           

          <div class="data_row">
            <div class="data_title"> </div>
            <div class="data_col">
              <% if p.seeker_provider %>
            
              <%= link_to 'Edit', edit_skill_post_requirement_sharing_path(p)%>
            
          <%else%>
            
              <%= link_to 'Edit', edit_skill_list_availability_sharing_path(p)%>              
            
          <%end%>
            </div>
          </div>
          <div class="data_row">
            <div class="data_title"></div>
            <div class="data_col">
              <%= link_to 'Destroy', skill_destroy_requirement_sharing_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
        <% my_count +=1 %>
        <%end%>
<% else %>
<div class="res_data">
<div class="data_row">
              <div class="data_title">Status</div>
              <div class="data_col">
                  You don't have any skill requirement
              </div>
            </div>
</div>
<% end %>


  </div>
  
<!--##################### End Mobile ############################-->
</div>
<script>
$(document).ready(function(){
$(".skill_post_paginate .pagination a").on("click", function(){
  $.get(this.href, { paginate: 'skill_post' }, null, 'script');    return false;
  });
});
</script>