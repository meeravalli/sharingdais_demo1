<div class="display">
  <h3 class="prf_title">Your Skill Sharing Details</h3>
  <div class="table-responsive src_res_desktop">
    <table class="table table-hover">
      <thead class="heading">
        <tr>
          <th>#</th>
          <th>City</th>
          <th>Locality</th>
          <th>Post As</th>
          <!--<th> Service </th>
          <th> I am looking for/I am </th>
          <th>Food Type</th>-->
          <th>Skill</th>
          <th>Price </th>
          <!--<th>Region Specific </th>-->
          <th>Description</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    <tbody>
    <% my_count = 1 %>
    <% if !@skill_post_requirements.empty? %>
      <% @skill_post_requirements.each do |p| %>
        <tr>
          <td><%= my_count %></td>
          <td><%= p.city.city_name %></td>
          <td><%= p.location.location_name%></td>
          <td>
            <% if p.seeker_provider == true %>
              Seeker
            <% else %>
              Provider              
            <% end %>
          </td>
          <!--<td><%#= p.service.service_type%></td>
          <td><%#= p.provider.provider_type%></td>
          <td><%#= p.food_type.name%></td>-->
          <td><%= p.sub_category.sub_category_type%></td>
          <td><%= p.charges%></td>
          <td><%= p.description%></td>
          <% if p.seeker_provider %>
            <td>
              <%= link_to 'Edit', edit_skill_post_requirement_sharing_path(p)%>
            </td>
          <%else%>
            <td>
              <%= link_to 'Edit', edit_skill_list_availability_sharing_path(p)%>              
            </td>
          <%end%>
          <td>
            <%= link_to 'Destroy', skill_destroy_requirement_sharing_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% my_count +=1 %>
      <% end %>
    <% else%>
      <tr> 
        <td colspan="8" style="text-align:center">You don't have any food requirements</td>
        <td></td>
      </tr>
    <%end%>
    </tbody>  
  </table>
</div></div>